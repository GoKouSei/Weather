<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <!--<style name="sd" parent="Widget.AppCompat.SearchView"-->

    <style name="AppTheme.Base" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="NetLoadDialogBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/net_load_dialog_bar</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="NetLoadDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="NetLoadDialogs" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
    </style>

</resources>
