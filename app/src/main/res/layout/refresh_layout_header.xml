<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/refresh_layout_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="下拉刷新"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <ProgressBar
        android:id="@+id/refresh_layout_header_progressbar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@id/refresh_layout_header_text"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/refresh_layout_header_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/refresh_layout_header_text"
        android:layout_toLeftOf="@id/refresh_layout_header_text"
        android:src="@drawable/arrow_downward" />

</RelativeLayout>